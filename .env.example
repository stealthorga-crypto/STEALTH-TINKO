# ============================================================================
# STEALTH TINKO - ENTERPRISE ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy to .env and fill with real values (DO NOT COMMIT .env)

# ============================================================================
# DATABASE & CORE SERVICES
# ============================================================================

# Neon PostgreSQL Database (Required)
DATABASE_URL=postgresql://<USER>:<PASSWORD>@<HOST>/<DATABASE>?sslmode=require

# Redis (Session & Cache Store)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Base URLs
PUBLIC_BASE_URL=http://127.0.0.1:8010
BASE_URL=http://127.0.0.1:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Authentication & Security
JWT_SECRET=replace_with_secure_random_string_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=1440

# ============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# ============================================================================

# Google OAuth (Required for SSO)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Twilio SMS/OTP Service (Required for Phone Authentication)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=
TWILIO_FROM_NUMBER=

# ============================================================================
# PAYMENT GATEWAYS
# ============================================================================

# Stripe (Primary Payment Processor)
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# Razorpay (Indian Market)
RAZORPAY_KEY_ID=rzp_test_
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# ============================================================================
# COMMUNICATION & NOTIFICATIONS
# ============================================================================

# Email SMTP Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@stealthtinko.com
SMTP_USE_TLS=true

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================================================
# BACKGROUND PROCESSING
# ============================================================================

# Celery Task Queue
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Analytics & Reporting
FEATURE_ANALYTICS_SINK=false
FEATURE_CLICKHOUSE_SINK=false
FEATURE_S3_SINK=false

# Application Features
FEATURE_SCHEDULE_PICKER=true
FEATURE_I18N=true
