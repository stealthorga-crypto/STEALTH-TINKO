# Azure Production Environment Configuration
# This file contains environment-specific settings for the production environment

# Database Configuration
DATABASE_URL=postgresql://stealthadmin:ProductionSecurePassword123!@stealth-tinko-prod-db.postgres.database.azure.com:5432/stealth_tinko_db?sslmode=require
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=50

# Azure Services
AZURE_KEY_VAULT_URL=https://stealth-tinko-prod-kv.vault.azure.net/
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=stealthtinkoprodst;EndpointSuffix=core.windows.net
AZURE_COMMUNICATION_SERVICE_CONNECTION_STRING=endpoint=https://stealth-tinko-prod-comm.communication.azure.com/;accesskey=

# Application Settings
ENVIRONMENT=prod
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com", "https://stealth-tinko-prod-app.azurewebsites.net"]

# Authentication
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=720
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# OTP Configuration
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=3
OTP_RATE_LIMIT_REQUESTS=5
OTP_RATE_LIMIT_WINDOW_MINUTES=15

# Email Configuration
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=STEALTH-TINKO

# Security Settings
BCRYPT_ROUNDS=14
ALLOW_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=true

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MINUTES=15

# Feature Flags
ENABLE_GOOGLE_OAUTH=true
ENABLE_OTP_LOGIN=true
ENABLE_API_KEYS=true
ENABLE_ANALYTICS=true

# Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=prod-key
ENABLE_METRICS=true
ENABLE_TRACING=true

# External APIs (Production keys - store in Key Vault)
STRIPE_PUBLIC_KEY=pk_live_
STRIPE_SECRET_KEY=sk_live_
RAZORPAY_KEY_ID=rzp_live_
RAZORPAY_KEY_SECRET=

# Performance Settings
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Monitoring and Alerting
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
ALERT_EMAIL=admin@yourdomain.com