# Azure Staging Environment Configuration
# This file contains environment-specific settings for the staging environment

# Database Configuration
DATABASE_URL=postgresql://stealthadmin:StagingSecurePassword123!@stealth-tinko-staging-db.postgres.database.azure.com:5432/stealth_tinko_db?sslmode=require
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Azure Services
AZURE_KEY_VAULT_URL=https://stealth-tinko-staging-kv.vault.azure.net/
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=stealthtinkostagingst;EndpointSuffix=core.windows.net
AZURE_COMMUNICATION_SERVICE_CONNECTION_STRING=endpoint=https://stealth-tinko-staging-comm.communication.azure.com/;accesskey=

# Application Settings
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=["https://staging.yourdomain.com", "https://stealth-tinko-staging-app.azurewebsites.net"]

# Authentication
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=720
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Configuration
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=3
OTP_RATE_LIMIT_REQUESTS=5
OTP_RATE_LIMIT_WINDOW_MINUTES=15

# Email Configuration
MAIL_FROM=noreply@staging.yourdomain.com
MAIL_FROM_NAME=STEALTH-TINKO Staging

# Security Settings
BCRYPT_ROUNDS=12
ALLOW_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=true

# Rate Limiting
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW_MINUTES=15

# Feature Flags
ENABLE_GOOGLE_OAUTH=true
ENABLE_OTP_LOGIN=true
ENABLE_API_KEYS=true
ENABLE_ANALYTICS=true

# Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=staging-key
ENABLE_METRICS=true
ENABLE_TRACING=true

# External APIs (Test keys)
STRIPE_PUBLIC_KEY=pk_test_
STRIPE_SECRET_KEY=sk_test_
RAZORPAY_KEY_ID=rzp_test_
RAZORPAY_KEY_SECRET=

# Performance Settings
WORKER_PROCESSES=2
WORKER_CONNECTIONS=500
KEEPALIVE_TIMEOUT=2
MAX_REQUESTS=500
MAX_REQUESTS_JITTER=25